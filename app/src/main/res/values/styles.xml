<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spaceColor">#3D679B</item>
        <item name="backgroundColor">@drawable/gradient</item>
        <item name="textColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/ChangeThemeAnimation</item>
    </style>

    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spaceColor">#29405C</item>
        <item name="backgroundColor">#4C4949</item>
        <item name="textColor">@android:color/white</item>
    </style>

    <style name="ChangeThemeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="backToolbar">@color/color_gradient2</item>
        <item name="android:actionOverflowMenuStyle">@android:color/black</item>
    </style>

    <style name="AppTheme.PlotPopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


    <!-- Search Bar -->
    <style name="ActionButton" parent="Theme.AppCompat.Light">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:minWidth">0dp</item>
    </style>


</resources>
