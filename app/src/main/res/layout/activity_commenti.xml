<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentList">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="418dp"
        android:layout_height="71dp"
        android:background="#3D679B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/frecciaIndietro"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="15dp"
                    android:text="Lista Commenti"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="519dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numberCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAPITOLO 4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="3dp" />

            <TextView
                android:id="@+id/titleBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Il barone rampante"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_comment_black_24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@android:color/white" />

        <View
            android:id="@+id/viewHome"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#3D679B" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/white" />

        <ListView
            android:id="@+id/lista1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_button"
            android:dividerHeight="3dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

