<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    android:orientation="vertical"
    tools:context=".PasswordDimenticata">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:background="@color/color_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:src="@drawable/logo_prova" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/parisienne"
                android:padding="5dp"
                android:text="@string/registrazione"
                android:textColor="#FFFF"
                android:textSize="22dp"
                android:textStyle="italic" />

            <View
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:background="#FFFF"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/diplomata_sc"
                android:padding="3dp"
                android:text="@string/app_name"
                android:textColor="#FFFF"
                android:textSize="27dp"
                android:textStyle="italic" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Recupera Password"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_36dp"
            android:text=" Inserisci la tua email: "
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:textColor="#5C5757"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/richiestaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_iphone_blue_36dp"
            android:text=" Inserisci il tuo numero di telefono: "
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:textColor="#5C5757"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/numeroTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="20sp" />


        <Button
            android:id="@+id/richiestaPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/generic_button"
            android:text="Invia Richiesta "
            android:textColor="@android:color/white"
            android:textSize="18dp" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/alertPass"
            android:textStyle="italic"/>





    </LinearLayout>


</LinearLayout>