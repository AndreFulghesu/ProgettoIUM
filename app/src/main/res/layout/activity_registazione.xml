<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".Registrazione">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:background="@drawable/gradient3"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/text_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/registrazione"
                android:textAlignment="center"
                android:textColor="@color/color_button"
                android:textStyle="italic"
                tools:text="@string/registrazione" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/NomeReg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/CognomeReg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:ems="10"
                android:hint="Cognome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/EmailReg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/UsernameReg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/PassworReg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:hint="Password"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/ConfermaPassworReg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:hint="Conferma Password"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/terminiServizio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#5F605F"
                android:text="Accetta i Termini di Servizio" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/buttonRegistrazione"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/generic_button"
                android:text="Registrati"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/alertPass"
                android:textStyle="italic"/>



            <Space
                android:layout_width="match_parent"
                android:layout_height="140dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color_button">

                <TextView
                    android:id="@+id/footer"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:text="@string/logo"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textColor="@color/color_white"
                    android:textStyle="italic" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>