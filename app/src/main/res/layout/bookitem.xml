<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="?attr/backgroundColor"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bookgenreimg"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_library_books_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/booktitle"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:textColor="?attr/textColor"
                android:text="Le cronache del Sud"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookauthor"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:textColor="?attr/textColor"
                android:text="Autore:Carlo Fumagalli"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageView
            android:id="@+id/starimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/ic_star_black_36dp"
            android:padding="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-42dp"
            android:layout_marginBottom="19dp"
            android:padding="3dp"
            android:textColor="?attr/textColor"
            android:textSize="16dp"
            android:text="4.5" />




    </LinearLayout>

    <ImageView
        android:id="@+id/gotobook"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:background="?attr/backgroundColor"
        android:textColor="@android:color/white"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />
</RelativeLayout>
