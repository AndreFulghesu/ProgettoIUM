<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bookgenreimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_library_books_black_24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/booktitle"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:textColor="?attr/textColor"
                android:text="Le cronache del Sud"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookauthor"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:textColor="#3D679B"
                android:text="@string/nome_autore"
                android:textSize="14dp"
                android:textStyle="bold" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/eye_views"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@android:color/white"
                    app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />



                <TextView
                    android:id="@+id/viewsTextView"
                    android:textColor="#000"
                    android:text="Ciao come va"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/starimg"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="28dp"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_star_black_36dp" />

        <TextView
            android:id="@+id/averageValutation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="-46dp"
            android:layout_marginBottom="13dp"
            android:padding="3dp"
            android:text="4.5"
            android:textAlignment="center"
            android:textColor="?attr/textColor"
            android:textSize="16dp" />


    </LinearLayout>

</RelativeLayout>
