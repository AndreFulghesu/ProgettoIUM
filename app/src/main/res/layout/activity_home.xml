<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">



    <ScrollView
        android:layout_width="355dp"
        android:layout_height="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_home_black_24dp" />


            <View
                android:id="@+id/viewHome"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="#3D679B"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/white" />


            <Button
                android:id="@+id/HomeButton1"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/generic_button"
                android:text="Continua a leggere"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/HomeButton2"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/secondblue"
                android:text="Catalogo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/HomeButton3"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/thirdblue"
                android:text="Il mio Libro"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" />


            <View
                android:id="@+id/viewHome2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="#3D679B"/>

            <Button
                android:id="@+id/HomeLogout"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:text="Logout"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#3D679B">

                <TextView
                    android:id="@+id/footer"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:text="@string/logo"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textStyle="italic" />

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>