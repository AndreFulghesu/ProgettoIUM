<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />



            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:drawableLeft="@drawable/ic_person_black_36dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:hint="Username"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />



            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:drawableLeft="@drawable/ic_lock_black_36dp"
                android:layout_marginBottom="5dp"
                android:textColorHint="#5F605F"
                android:hint="Password"
                android:inputType="textPassword" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/passwordDimenticata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dimenticata"
                android:textColor="#3D679B"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:textSize="15dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <Button
                android:id="@+id/accedi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/generic_button"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/gradient3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@drawable/generic_button" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <TextView
                android:id="@+id/registrazione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registrati"
                android:textAlignment="center"
                android:textColor="#3D679B"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/session"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:textColor="#DC0A0A"
                android:textSize="15dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/qualcosa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="@string/benvenuto"
                android:textAlignment="center"
                android:textColor="#3D679B"
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="bold|italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color_button">

                <TextView
                    android:id="@+id/footer"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:text="@string/logo"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:textColor="@color/color_white"
                    android:textStyle="italic" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>