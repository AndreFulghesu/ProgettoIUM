<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".ChapterList">

    <LinearLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="786dp"
        android:background="?attr/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColor"
            android:orientation="vertical">

            <include
                android:id="@+id/chapterlistbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="67dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="?attr/backgroundColor" />


            <ImageView
                android:id="@+id/homeIcon2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_line_weight_black_24dp" />

            <View
                android:id="@+id/viewHome"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="?attr/spaceColor" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/white" />

            <ListView
                android:id="@+id/chapterlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="?attr/spaceColor"
                android:dividerHeight="3dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>